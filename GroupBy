select * from employees;


-- 1. Find the number of employees. 
select department, count(*) as num_of_emp
from employees
group by department;


-- 2. Find the minimum and maximum salary.
select department, min(salary) as minimun, max(salary) as maximum
from employees
group by department;

-- 3. Find Average Salary
select department, avg(salary) as avg_salary
from employees
group by department;

-- 4. Find the highest salary in descending order.
select department, salary
from employees 
order by salary desc;


-- 5. Find the department who has maximum number of employees.
select department, count(*) as num_of_emp
from employees
group by department
order by num_of_emp desc limit 1;


-- 6. Find the deprtment who has more then 3 employees
select department, count(*) as num_of_emp
from employees
group by department
having num_of_emp>5;

